---
apt_cache_valid_time: 86400
www_root: /srv/www

hhvm: true

memcached_sessions: false

web_user: web
web_group: www-data
web_sudoers:
  - "/usr/sbin/service php5-fpm *"

sudoers:
  - user: admin
    groups: [sudo]

ferm_input_list:
  - type: dport_accept
    dport: [http, https]
    filename: nginx_accept
  - type: dport_limit
    dport: [ssh]
    seconds: 300
    hits: 20

logrotate_scripts:
  - name: stacey-sites
    path: "{{ www_root }}/**/logs/*.log"
    options:
      - weekly
      - maxsize 50M
      - missingok
      - rotate 8
      - compress
      - delaycompress
      - notifempty
      - create 0640 {{ web_user }} {{ web_group }}
      - sharedscripts
    scripts:
      prerotate: |
        if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
              run-parts /etc/logrotate.d/httpd-prerotate; \
            fi \
      postrotate: invoke-rc.d nginx rotate >/dev/null 2>&1

github_ssh_keys:
  - username: afonsoduarte
    authorized:
      - "{{ web_user }}"